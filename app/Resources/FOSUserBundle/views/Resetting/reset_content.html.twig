{% trans_default_domain 'FOSUserBundle' %}

<div class="col-md-6">
  <div class="box box-primary">
    <div class="box-header with-border">
      <h3 class="box-title">Datos</h3>
    </div>
    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token}), 'attr': { 'class': 'form-horizontal' } }) }}
      <div class="box-body">
        {{ form_widget(form) }}
      </div>
      <div class="box-footer">
        <button type="submit" class="btn btn-primary pull-right">{{ 'resetting.reset.submit'|trans }}</button>
      </div>
    {{ form_end(form) }}
  </div>
</div>